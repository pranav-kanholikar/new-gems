
<%= form_for @user, url: wizard_path do |f| %>

<h2>Tell us little about yourself.</h2>

   <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date, start_year: 1990, end_year: Date.today.year %>
  </div>

  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, rows: 5 %>
  </div>

    <div class="action">
    <%= f.submit "continue" %><br />
  </div>


<% end %>






